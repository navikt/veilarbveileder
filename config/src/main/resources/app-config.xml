<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://appconfig.aura.nav.no" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://appconfig.aura.nav.no http://maven.adeo.no/xsd/appconfig.xsd">

    <name>veilarbveileder</name>

    <selftest>
        <path>veilarbveileder/internal/selftest</path>
    </selftest>

    <artifacts>
        <ear groupId="no.nav.fo" artifactId="veilarbveileder-jee"/>
    </artifacts>

    <abacSecurity serviceUserResourceAlias="srvveilarbveileder"/>


    <resources>
        <rest alias="abac.pdp.endpoint" mapToProperty="abac.endpoint" />
        <ldap alias="ldap" mapToProperty="ldap"/>

        <webservice mapToProperty="norg.virksomhet_enhet" alias="virksomhet:Enhet_v1"/>
        <applicationCertificate alias="srvveilarbveileder"/>

        <rest alias="veilarblogin.redirect-url" mapToProperty="oidc-redirect" />

        <baseUrl alias="isso-host"/>
        <baseUrl alias="isso-jwks"/>
        <baseUrl alias="isso-issuer"/>
        <credential alias="isso-rp-user"/>
        <baseUrl alias="isso.isalive"/>
        <applicationProperties alias="portefolje.pilot.properties"/>
        <applicationProperties alias="veilarbveileder.properties"/>


    </resources>

    <exposed-services>
        <exposedRest name="veilArbVeilederAPI" path="/veilarbveileder/api"/>
    </exposed-services>

    <loadBalancer isAlive="/veilarbveileder/internal/isAlive" />

    <serverOptions>
        <memoryParameters resourceAlias="veilarb-memparams"/>
    </serverOptions>

    <security serviceUserResourceAlias="srvveilarbveileder">
        <logins/>
    </security>
</application>

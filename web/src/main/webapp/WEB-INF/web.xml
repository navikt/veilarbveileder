<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>veilarbportefolje</display-name>
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <name>veilarbportefolje_JSESSIONID</name>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>

    <context-param>
        <param-name>contextClass</param-name>
        <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </context-param>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>no.nav.fo.config.ApplicationConfig</param-value>
    </context-param>

    <filter>
        <filter-name>xframeoptions</filter-name>
        <filter-class>no.nav.sbl.dialogarena.common.web.security.XFrameOptionsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>xframeoptions</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>MDCFilter</filter-name>
        <filter-class>no.nav.modig.presentation.logging.session.MDCFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MDCFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>xsrf</filter-name>
        <filter-class>no.nav.fo.provider.filter.XsrfFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>xsrf</filter-name>
        <servlet-name>restservlet</servlet-name>
    </filter-mapping>

    <servlet>
        <servlet-name>selftest</servlet-name>
        <servlet-class>no.nav.fo.servlet.SelfTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selftest</servlet-name>
        <url-pattern>/internal/selftest</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>selftest-json</servlet-name>
        <servlet-class>no.nav.fo.servlet.SelfTestJsonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selftest-json</servlet-name>
        <url-pattern>/internal/selftest.json</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>isAlive</servlet-name>
        <servlet-class>no.nav.fo.servlet.IsAliveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>isAlive</servlet-name>
        <url-pattern>/internal/isAlive</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>restservlet</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>no.nav.fo.provider.rest.RestConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
    </servlet>
    <servlet-mapping>
        <servlet-name>restservlet</servlet-name>
        <url-pattern>/tjenester/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>selftest</web-resource-name>
            <url-pattern>/internal/selftest</url-pattern>
            <url-pattern>/css/*</url-pattern>
            <url-pattern>/js/*</url-pattern>
            <url-pattern>/font/*</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Restricted</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login.html</form-login-page>
            <form-error-page>/login.html?status=fail</form-error-page>
        </form-login-config>
    </login-config>
</web-app>
